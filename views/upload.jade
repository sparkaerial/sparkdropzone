extends layout

block content
	.container-fluid
		h1= title
		p Upload your site images here

		form#my-awesome-dropzone.dropzone(action='/target', method="post", enctype="multipart/form-data")
			.form-group
				label(for='exampleInputPassword1') Site Name
				input#exampleinputPassword1.form-control(type='password', placeholder='Password')
			.form-group
				label(for='exampleInputPassword1') Date
				input#exampleinputPassword1.form-control(type='date', placeholder='Password')

			.form-group
				button.btn.btn-default(type='submit', value='Upload') Submit
